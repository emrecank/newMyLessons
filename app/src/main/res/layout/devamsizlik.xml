<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <Button
        android:id="@+id/devamsizlik_azalt"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_below="@+id/devamsizlik_arttir"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/tv_devamsizlik"
        android:background="@drawable/minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/devamsizlik_arttir" />

    <Button
        android:id="@+id/bt_devamsizlik"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/devamsizlikinfo"
        android:background="@drawable/lessons"
        android:text="Button"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_devamsizlik"
        android:layout_width="30dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/bt_devamsizlik"
        android:text="3"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/devamsizlik_azalt" />

    <Button
        android:id="@+id/devamsizlik_arttir"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/tv_devamsizlik"
        android:background="@drawable/plus"
        android:rotation="180"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/devamsizlikid"
        android:layout_width="2dp"
        android:layout_height="2dp"
        android:layout_below="@+id/devamsizlik_arttir"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/tv_devamsizlik"
        android:text="0"
        android:textSize="0sp" />

    <TextView
        android:id="@+id/maxdevamsizlik"
        android:layout_width="2dp"
        android:layout_height="2dp"
        android:layout_below="@+id/devamsizlik_arttir"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/devamsizlikid"
        android:text="0"
        android:textSize="0sp" />

    <Button
        android:id="@+id/devamsizlikinfo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:background="@android:drawable/ic_dialog_info"
        android:textSize="0sp" />
</RelativeLayout>